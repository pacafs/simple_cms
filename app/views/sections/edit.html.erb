<h1>EDIT</h1>

<%= form_for(:section, :url =>{:action => "update", :id => @section.id}) do |s| %>

	<table style="text-align:center;">
	<tr>
	  <th>Name</th>
	  <td><%= s.text_field(:name) %></td>
	</tr> 
	<tr>
	  <th>Visible</th>
	  <td><%= s.text_field(:visible) %></td>
	</tr>
	<tr> 
	  <th>Content Type</th>
	  <td><%= s.text_field(:content_type) %></td>
	</tr>
	<tr>
	  <th>Content</th>
	  <td><%= s.file_field(:content) %></td>
	</tr>
	<tr><td colspan="2"><%= submit_tag("Submit") %></td></tr>
	</table>

<% end %>


<%= link_to({:action => "show", :id => @section.id}) do %><button>Back</button><% end %>

<%= link_to({:action => "destroy", :id => @section.id}, method: :delete,  class: "btn_link") do %><button>Delete</button><% end %>
