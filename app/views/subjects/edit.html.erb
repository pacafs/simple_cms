<h1>EDIT</h1>

<%= form_for(:subject, :url =>{:action => "update", html: { multipart: true }, :id => @subject.id}) do |f| %>

	  <%= f.text_field(:name) %>
	  <%= f.text_field(:position) %>
	  <%= f.text_field(:visible) %>
	  <%= f.file_field(:image) %>
	  <%= submit_tag("Submit") %>

<% end %>

<%= link_to({:action => "show", :id => @subject.id}) do %><button>Back</button><% end %>

<%= link_to({:action => "destroy", :id => @subject.id}, method: :delete,  class: "btn_link") do %><button>Delete</button><% end%>
	