<html>
<head>
  <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
</head>
<body>
<h1>EDIT</h1>

<%= form_for(:subject, :url =>{:action => "update", html: { multipart: true }, :id => @subject.id}) do |f| %>
<table style="text-align:center;" class="pure-table">
<tr>
  <th>Name</th>
  <td><%= f.text_field(:name) %></td>
</tr> 
<tr> 
  <th>Position</th>
  <td><%= f.text_field(:position) %></td>
</tr>
<tr>
  <th>Visible</th>
  <td><%= f.text_field(:visible) %></td>
</tr>
<tr>
  <th>Image</th>
  <td><%= f.file_field(:image) %></td>
</tr>
<tr><td colspan="2"><%= submit_tag("SUBMIT", :class => "pure-button pure-button-primary") %></td></tr>
</table>
<% end %>
<%= link_to subjects_show_path(:id => @subject.id) do %><button class="pure-button pure-button-primary">Back</button><% end %>

</body>
</html>