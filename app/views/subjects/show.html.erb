<h1><%= @subject.name %></h1>

<div class="CSSTableGenerator" >
  <table >
    <tr>
      <td>Picture</td>
      <td>Name</td>
      <td>Position</td> 
      <td>Visible</td>
      <td>Pages</td>
      <td>Created At</td>
      <td>Updated At</td>
    </tr>
    <tr>
      <td><%= link_to @subject.image.url(:large), class: "test" do %><%= image_tag @subject.image.url(:medium) %><% end %></td>
      <td><%=  @subject.name %></td>
      <td><%=  @subject.position %></td>    
      <td><%=  @subject.visible ? "Yes" : "No" %></td>
      <td><%=  @subject.pages.size %></td>
      <td><%=  @subject.created_at %></td>
      <td><%=  @subject.updated_at %></td>
    </tr>
  </table>
</div>

<div>
  <h2>Pages</h2>
  <% @subject.pages.each do |p|%>
  <p><%= p.name %></p>
  <p><%= p.subject.name %></p>
  <p><%= p.permalink %></p>
  <p><%= p.visible %></p>
  <p><%= p.position %></p>
  <% end %>
</div>

<br />


<%= link_to({:action => "edit", :id => @subject.id}) do %><button>Edit</button><% end %>
<%= link_to({:action => "index"}) do %><button>Back</button><% end %> 
